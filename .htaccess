<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Handle requests to the public folder
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
    
    # Remove /public from URL
    RewriteCond %{REQUEST_URI} ^/public/(.*)$
    RewriteRule ^public/(.*)$ /$1 [R=301,L]
</IfModule>

